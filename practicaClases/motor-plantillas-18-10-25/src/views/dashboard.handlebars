<div>
    <h1>Dashboard</h1>
    {{#with user}}
        <h2>{{username}}</h2>
        {{#if isAdmin}}
            <h3>permisos de administrador</h3>
        {{else}}
            <h3>no tiene permisos de administrador</h3>
        {{/if}}
    {{/with}}

    <div>
        <form action="http://localhost:8080/api/products" method="post" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="nombre del producto">
            <input type="number" name="price" placeholder="precio del producto">
            <input type="file" name="file" placeholder="img del producto">
            <button type="submit">Agregar producto</button>
        </form>
    </div>

    {{#each products}}
        <div class="productCard">
            <li>
                <img src={{this.thumbnail}} alt="imagen producto" class="productImage">
                <h2>{{this.title}}</h2>
                <h3>Precio: {{this.price}}</h3>
            </li>
        </div>
    {{/each}}
</div>