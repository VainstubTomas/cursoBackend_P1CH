<div>
    <h1>Real Time Products</h1>

    <div>
        <h2>Agregue un producto nuevo</h2>

        <form id="addProductsForm" action="http://localhost:8080/api/products" method="post" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="nombre del producto">
            <input type="text" name="description" placeholder="descripciÃ³n del producto">
            <input type="text" name="code" placeholder="codigo del producto">
            <input type="number" name="price" placeholder="precio del producto">
            <input type="text" name="status" placeholder="estado del producto">
            <input type="number" name="stock" placeholder="cantidad en stock">
            <input type="text" name="category" placeholder="categoria del producto">
            <input type="file" name="thumbnails" placeholder="imagen del producto">
            <button type="submit">Agregar producto</button>
        </form>

        <h2>Lista productos en vivo</h2>

        <div id="productsCardsContainer">
            {{#each products}}
            <div class="productCard">
                <li>
                    <img src={{this.thumbnails}} alt="imagen producto" class="productImage">
                    <h2>{{this.title}}</h2>
                    <h3>Precio: ${{this.price}}</h3>
                </li>
            </div>
            {{/each}}
        </div>
    </div>
</div>

